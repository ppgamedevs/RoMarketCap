# -----------------------------
# PUBLIC (exposed to browser)
# -----------------------------

# Canonical site URL used for metadataBase, sitemap, robots, hreflang.
NEXT_PUBLIC_SITE_URL=https://romarketcap.ro

# Localization (RO default, EN optional)
NEXT_PUBLIC_DEFAULT_LOCALE=ro
NEXT_PUBLIC_SUPPORTED_LOCALES=ro,en

# -----------------------------
# SERVER-ONLY (never expose)
# -----------------------------

# Neon Postgres connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"
# Optional direct URL for migrations / long-running connections (Neon)
DATABASE_DIRECT_URL="postgresql://USER:PASSWORD@HOST:5432/DB?sslmode=require"

# Auth (design on Day 1; implementation later)
AUTH_SECRET="replace_me_with_a_long_random_secret"
AUTH_TRUST_HOST=true

# Stripe (monetization later)
STRIPE_SECRET_KEY="sk_live_or_test"
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_or_test"

# Rate limiting / caching (later; e.g. Upstash Redis)
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# Observability (later)
SENTRY_DSN=""
SENTRY_AUTH_TOKEN=""

# Cron protection (later, for Vercel Cron endpoints)
CRON_SECRET="replace_me"
